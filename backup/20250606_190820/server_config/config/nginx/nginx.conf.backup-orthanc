events { worker_connections 1024; }
http { include /etc/nginx/mime.types; default_type application/octet-stream; upstream ohif { server pacs_ohif_viewer:80; } server { listen 80; server_name srv853233.hstgr.cloud; return 301 https://$server_name$request_uri; } server { listen 443 ssl http2; server_name srv853233.hstgr.cloud; ssl_certificate /etc/nginx/ssl/nginx.crt; ssl_certificate_key /etc/nginx/ssl/nginx.key; ssl_protocols TLSv1.2 TLSv1.3; location / { proxy_pass http://ohif; proxy_set_header Host $host; proxy_set_header X-Real-IP $remote_addr; proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for; proxy_set_header X-Forwarded-Proto $scheme; } } }
