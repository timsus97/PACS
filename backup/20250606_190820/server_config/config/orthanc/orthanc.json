{
  "RemoteAccessAllowed": true,
  "AuthenticationEnabled": false,
  "HttpPort": 8042,
  "DicomPort": 4242,
  "StorageDirectory": "/var/lib/orthanc/storage",
  "IndexDirectory": "/var/lib/orthanc/index",
  "CorsEnabled": true,
  "CorsAllowCredentials": false,
  "CorsAllowedOrigins": "*",
  "CorsAllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
  "CorsAllowedHeaders": ["Accept", "Accept-Language", "Content-Language", "Content-Type", "Authorization"],
  
  "Plugins": [
    "/usr/local/share/orthanc/plugins/libOrthancDicomWeb.so"
  ],
  
  "DicomWeb": {
    "Enable": true,
    "Root": "/dicom-web/",
    "EnableWado": true,
    "WadoRoot": "/wado",
    "Ssl": false,
    "QidoRoot": "/qido",
    "StowRoot": "/stow",
    "Host": "0.0.0.0",
    "Port": 8042
  }
} 